<% if user_signed_in? %>
  <h1>Hello <%= current_user.email %>! You are now signed in</h1>
  <p><%= link_to('Logout', destroy_user_session_path, method: :delete) %></p>
<% end %>
<br>
<br>
<% @posts.each do |post| %>
<div>
  <p><%= simple_format(post.message) %></p>
  <p>Created at: <%= post.created_at %></p>
  <%= link_to 'Delete', posts_path(post), method: :delete %> 
  <% if Time.now <= post.created_at + 600 && post.user_id == current_user.id %>  
    <%= link_to 'posts/' + post.id.to_s do %>
      Update
    <% end %>
  <% end %>
</div>
<% end %>

<%= link_to new_user_post_path(current_user.id) do %>
  New post
<% end %>